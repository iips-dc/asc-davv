<!-- row -->            
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Courses Records</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="well">
    <%= form_for_filterrific @filterrific do |f| %>
      <div class="col-md-1">
        <label class="label-control"> Search:</label>
      </div>
      <div class="col-md-3">
        <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
        <%= f.text_field(
          :search_query,
          class: 'filterrific-periodically-observed form-control', placeholder: 'Enter Search keyword'
        ) %>
      </div>
      <div class="col-md-1">
        <label class="label-control"> Filter:</label>
      </div>
      <div class="col-md-3">
        <%= f.select(:with_session, @filterrific.select_options[:with_session], { include_blank: 'Select an Academic Session' }, { :class => 'filterrific-periodically-observed form-control'}) %>
      </div>
      <div class="col-md-1">
        <label class="label-control"> Sort By:</label>
      </div>
      <div class="col-md-3">  
        <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by], { include_blank: 'Sort By:' }, { :class => 'filterrific-periodically-observed form-control'}) %>
      </div>
      <br/>
      <br/>
      <br/>
      <%= link_to 'Reset filters', reset_filterrific_url, :class => 'btn btn-sm btn-default' %>
      <%# add an automated spinner to your form when the list is refreshed %>
      <%= render_filterrific_spinner %>
    <% end %>
</div>
<!-- /.well -->

<!-- row -->
<div class="row">
    <%= render(
      partial: 'courses/list',
      locals: { courses: @courses }
    ) %>    
    <%= link_to "Download as Excel", courses_path(format: "xlsx"), :class => 'btn btn-default' %>
</div>
<!-- /. row -->    
    
                        