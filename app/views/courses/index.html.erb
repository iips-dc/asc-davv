<!-- row -->            
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Course Table Records</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<!-- row -->
<div class="row">
    <div class="col-lg-12">
        <%= paginate @courses %>
        <div class="panel panel-default">
            <div class="panel-heading">
              <b>List Of Courses</b>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                      <thead>
                          <tr>
                            <th>Course name</th>
                            <th>Course Type</th>
                            <th>Description</th>
                            <th>Start date</th>
                            <th>End date</th>
                          </tr>
                      </thead>    
                      <tbody>
                        <% @courses.each do |course| %>
                          <tr>
                            <td><%= link_to course.course_name, course %></td>
                            <td><%= course.course_type %></td>
                            <td><%= course.description %></td>
                            <td><%= course.start_date %></td>
                            <td><%= course.end_date %></td>
                          </tr>
                        <% end %>
                      </tbody>  
                    </table>
                </div>
                <!-- /.table-responsive -->       
              </div>
              <!-- /.panel-body -->
            </div>
            <!-- /. panel -->    
        </div>
        <!-- /.col-lg-12 -->    
</div>
<!-- /. row -->    
    
                        