<!-- row -->
<div class="row">
	<div class="col-md-4">
		<h2>Resend confirmation instructions</h2>

		<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post. :role => 'form' }) do |f| %>
		  <%= devise_error_messages! %>
		  <fieldset>
		  	<div class="form-group">
		    	<%= f.label :email, :class => 'label-control' %><br />
		    	<%= f.email_field :email, :class => 'form-control', autofocus: true %>
		  	</div>

		  	<div class="form-group">
		    	<%= f.submit "Resend confirmation instructions", :class =>"btn btn-md btn-default" %>
		  	</div>
		  </fieldset>
		<% end %>
		<%= render "devise/shared/links" %>
	</div>
</div>
<!-- /.row-->	