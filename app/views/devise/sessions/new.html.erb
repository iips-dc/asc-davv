<!-- row -->
<div class="row">
    <div class="col-md-4 col-md-offset-4 ">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Please Sign In</h3>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :role => 'form'}) do |f| %>
            <fieldset>
              <div class="form-group">
                <%= f.label :email, :class => 'label-control' %><br />
                <%= f.email_field :email, :placeholder => "E-mail", :class => 'form-control', autofocus: true %>
              </div>

              <div class="form-group">
                <%= f.label :password, :class => 'label-control' %><br />
                <%= f.password_field :password, :placeholder => "Password", :class => 'form-control', autocomplete: "off" %>
              </div>

              <div class="checkbox">
                <% if devise_mapping.rememberable? -%>
                  <label>
                    <%= f.check_box :remember_me %>Remember me
                  </label>
                <% end -%>
              </div>
              
              <div class="actions">
                <%= f.submit "Sign in", :class =>"btn btn-lg btn-success btn-block"%>
              </div>
            </fieldset>  
          <% end %>
          </div>
          <div class="col-sm-10 btn-md">
            <%= render "devise/shared/links" %>
          </div>
      </div>
      <!-- login panel -->
  </div>
</div>
<!-- /.row -->
