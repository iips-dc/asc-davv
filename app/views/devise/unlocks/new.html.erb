<!-- row -->
<div class="row">
	<div class="col-md-4">
		<h2>Resend unlock instructions</h2>

		<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, :role => 'form' }) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="form-group">
		    <%= f.label :email, :class => 'label-control' %><br />
		    <%= f.email_field :email, :class => 'form-control', autofocus: true %>
		  </div>

		  <div class="form-group">
		    <%= f.submit "Resend unlock instructions", :class =>"btn btn-md btn-default" %>
		  </div>
		<% end %>
		<%= render "devise/shared/links" %>
	</div>
</div>
<!-- /.row -->		
