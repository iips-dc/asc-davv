<!-- row -->            
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Feedback</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="well">
    <%= form_for_filterrific @filterrific do |f| %>
      <div class="col-md-1">
        <label class="label-control"> Sort By:</label>
      </div>
      <div class="col-md-4">  
        <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by], { include_blank: 'Sort By:' }, { :class => 'filterrific-periodically-observed form-control'}) %>
      </div>
      <br/>
      <br/>
      <br/>
      <%# add an automated spinner to your form when the list is refreshed %>
      <%= render_filterrific_spinner %>
    <% end %>
</div>
<!-- /.well -->

<!-- row -->
<div class="row">
    <%= render(partial: 'feedbacks/list', locals: { feedbacks: @feedbacks })  %>
</div>
<!-- /. row -->    
    
                        
