
<svg class="chart center-block"></svg>
<br />
<div id="tooltip">

<span id="alfabet" style='line-height:3em; font:1em sans-serif;'>A</span>
<p><span id="value">100</span></p>
</div>
<style>

#tooltip {
position: absolute;
width: 220px;
height: auto;
padding: 10px;
font-size: 15px;
background-color: white;
-webkit-border-radius: 10px;
-moz-border-radius: 10px;
border-radius: 10px;
-webkit-box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.4);
-moz-box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.4);
box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.4);
pointer-events: none;
}
 
#tooltip.hidden {
display: none;
}
 
#tooltip p {
margin: 0;
font-family: sans-serif;
font-size: 16px;
line-height: 20px;
}
 







.axis text {
font: 10px sans-serif;
}
 
.axis path,
.axis line {
fill: none;
stroke: #000;
shape-rendering: crispEdges;
}
 
.x.axis path {
display: none;

}
 
rect {
  
-moz-transition: all 0.3s;
-o-transition: all 0.3s;
-webkit-transition: all 0.3s;
transition: all 0.5s;
cursor:pointer;
}
 
</style>
 
<script>
 
var margin = {top: 40, right: 30, bottom: 30, left: 40},
width = 960 - margin.left - margin.right,
height = 500 - margin.top - margin.bottom;
 
var x = d3.scale.ordinal()
.rangeRoundBands([0, width], .1);
 
var y = d3.scale.linear()
.range([height, 0]);
 
var xAxis = d3.svg.axis()
.scale(x)
.orient("bottom");
 
var yAxis = d3.svg.axis()
.scale(y)
.orient("left");



var margin = {top: 30, right: 40, bottom: 100, left: 50}


 
var chart = d3.select(".chart")
.attr("width", width + margin.left + margin.right)
.attr("height", height + margin.top + margin.bottom)
.append("g")
.attr("transform", "translate(" + margin.left + "," + margin.top + ")");

var data;
 
d3.json("feedbacks.json", function(error, json) {
 
if (error) return console.warn(error);
 
data = json;
 
x.domain(data.map(function(d) { return d.person_name; }));
 
y.domain([0, d3.max(data, function(d) { return d.communication_skill +d.competency_subject+d.quality_lecture +d.usefulness_topic; })]);
 console.log(data);

 
chart.append("g")
.attr("class", "y axis")
.call(yAxis);
 
 chart.append("g")
        .attr("class", "x axis")
        .attr("transform", "translate(0," + height + ")")
        .call(xAxis)
        .selectAll("text")  
            .style("text-anchor", "end")
            .attr("dx", "-.8em")
            .attr("dy", ".15em")
            .attr("transform", function(d) {
                return "rotate(-65)" 
                });
chart.selectAll(".bar")
.data(data)
.enter()
.append("rect")
.attr("class", "bar")
.attr("id", function(d) { return 'bar'+d.person_name;})
.attr("x", function(d) { return x(d.person_name); })
.attr("y", function(d) { return y(d.communication_skill +d.competency_subject+d.quality_lecture +d.usefulness_topic); })
.attr("height", function(d) { return height - y(d.communication_skill +d.competency_subject+d.quality_lecture +d.usefulness_topic); })
.attr("width", x.rangeBand())
.attr("fill", function(d) { return "rgb(17,41,89)"; })

 

 
.on("mouseover", function(d) {
d3.select(this)
.transition()
.duration(50)
.attr("fill", "#CC0000");
 
//Get this bar's x/y values, then augment for the tooltip
var xPosition = parseFloat(d3.select(this).attr("x")) + x.rangeBand() / 2;
var yPosition = parseFloat(d3.select(this).attr("y")) / 2 + height / 2;
 
//Update the tooltip position and value
d3.select("#tooltip")
.style("left", xPosition + "px")
.style("top", yPosition + "px")
.select("#value")
.text(d.frequency);
 
d3.select("#alfabet")
.html("Name : "+d.person_name +"<br>"+ "Course Name : "+d.course_name + "<br>"+ "Communication skills : " + d.communication_skill +"<br>"+ "Competency Subject : " + d.competency_subject +"<br>"+ "Quality Lecture : " + d.quality_lecture +"<br>"+ "Usefulness Topic : " + d.usefulness_topic    );
 

 
//Show the tooltip
d3.select("#tooltip").classed("hidden", false);
})
 
.on("mouseout", function() {
d3.select(this)
.transition()
.delay(100)
.duration(250)
.attr("fill", function(d) { return "rgb(" + Math.round(d.frequency * 1000) + ",10, 100)"; })
 
//Hide the tooltip
d3.select("#tooltip").classed("hidden", true);
 
})
.append("title")
.text(function(d) {  return d.letter + " value is " + d.frequency;});
;
 
});
 


</script>