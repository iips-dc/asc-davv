<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">

  <link rel="icon" type="image/png" href="../assets/favicon.ico" /><title>HRDC-DAVV</title>

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>
    <!-- wrapper -->
    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to 'HRDC-DAVV', index_path, class:"navbar-brand" %>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">         
                <li role="presentation">
                   <p class="text-primary"> Welcome, <i class="fa fa-user fa-fw"></i> <%= current_admin.username %> </p> 
                </li>
                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                          <i class="fa fa-navicon"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <% if can? :update, Admin %>
                        <li role="presentation">
                          <%= link_to "Account Settings", edit_admin_registration_path, :method => :get, :class => 'fa fa-gear' %>
                        </li>
                        <li class="divider"></li>
                        <% end %>
                        <li role="presentation">
                            <%= link_to "Sign Out", destroy_admin_session_path, :method => :delete, :class => 'fa fa-sign-out' %>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a class="<%= 'active' if current_page?(admin_path) %>" href="/admin"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
                        </li>
                        <% if can? :create, Notice %>
                        <li>
                            <a class="<%= 'active' if current_page?(new_notice_path) %>" href="/notices/new"><i class="fa fa-comment fa-fw"></i> New Notice</a>
                        </li>
                        <% end %>

                        <% if can? :create, Schedule %>
                        <li>
                            <a class="<%= 'active' if current_page?(new_schedule_path) %>" href="/schedules/new"><i class="fa fa-upload fa-fw"></i> Upload</a>
                        </li>
                        <% end %>

                        <% if can? :manage, Course %>
                        <li>
                            <a class="<%= 'active' if current_page?(dd_search_path) %>" href="/dd_search"><i class="fa fa-print fa-fw"></i> DD Receipt</a>
                        </li>

                        <li>
                            <a href="#"><i class="fa fa-calendar fa-fw"></i> Course<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li> 
                                    <a href="/courses" class="<%= 'active' if current_page?(courses_path)%>">Courses</a> 
                                </li>
                                <li>
                                    <a href="/courses/new" class="<%= 'active' if current_page?(new_course_path)%>">New Course</a> 
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <% end %>

                        <% if can? :manage, ResourcePerson %>
                        <li>
                            <a href="#"><i class="fa fa-user fa-fw"></i> Resource Person<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="/resource_people" class="<%= 'active' if current_page?(resource_people_path)%>">Resource People</a>
                                </li>
                                <li>
                                    <a href="/resource_people/new" class="<%= 'active' if current_page?(new_resource_person_path)%>">Add Resource Person</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <% end %> 
                       
                        <% if can? :record, ShorttermCourse %>
                        <li>
                            <a href="#"><i class="fa fa-edit fa-fw"></i>Application Forms<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">        
                                <li>
                                    <a href="/shortterm_record" class="<%= 'active' if current_page?(shortterm_record_path)%>">Short-term Course</a>
                                </li>
                                <li>
                                    <a href="/refresher_record" class="<%= 'active' if current_page?(refresher_record_path)%>">Refresher Course</a>
                                </li>
                                <li>
                                    <a href="/orientation_record" class="<%= 'active' if current_page?(orientation_record_path)%>">Orientation Course</a>
                                </li>
                                <li>
                                    <a href="/interaction_record" class="<%= 'active' if current_page?(interaction_record_path)%>">Interaction Program</a>
                                </li>
                                <li>
                                    <a href="/workshop_record" class="<%= 'active' if current_page?(workshop_record_path)%>">Principal Workshop</a>
                                </li>
                                <li>
                                    <a href="/winter_record" class="<%= 'active' if current_page?(winter_record_path)%>">Winter School</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>    
                        <% end %>

                        <li>
                            <a href="#"><i class="fa fa-folder fa-fw"></i> Feedback<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">        
                                <li>
                                    <a href="/feedbacks/new" class="<%= 'active' if current_page?(new_feedback_path)%>">New Feedback</a> 
                                </li>
                                <% if can? :read, Feedback %>
                                <li>
                                    <a href="/feedbacks" class="<%= 'active' if current_page?(feedbacks_path)%>">Feedback Data</a>
                                </li>
                                <% end %>
                                <% if can? :read, Feedback %>
                                <li>
                                    <a href="/report" class="<%= 'active' if current_page?(report_path)%>">Feedback Report</a>
                                </li>
                                <% end %>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>

                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper">
            <%= yield %>    
                <!-- Flash message -->
                <%- flash.each do |name, msg| -%>
                  <div class="alert alert-info col-md-3" role="alert">
                    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
                  </div>
                <%- end -%>
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
    <footer>
        <div class="row"></div>
    </footer>  
</body>
</html>