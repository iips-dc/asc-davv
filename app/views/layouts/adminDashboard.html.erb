<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Academic Staff College, DAVV</title>

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body>
  <!-- wrapper -->
  <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <%= link_to 'Academic Staff College', index_path, class:"navbar-brand" %>
            </div>
            <!-- /.navbar-header -->

            <ul class="nav navbar-top-links navbar-right">         
                <li role="presentation">
                   <p class="text-primary"> Welcome, <i class="fa fa-user fa-fw"></i> <%= current_admin.username %> </p> 
                </li>
                <!-- /.dropdown -->
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                          <i class="fa fa-navicon"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <% if can? :update, Admin %>
                        <li role="presentation">
                          <%= link_to "Account Settings", edit_admin_registration_path, :method => :get, :class => 'fa fa-gear' %>
                        </li>
                        <li class="divider"></li>
                        <% end %>
                        <li role="presentation">
                            <%= link_to "Sign Out", destroy_admin_session_path, :method => :delete, :class => 'fa fa-sign-out' %>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
            <!-- /.navbar-top-links -->

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a class="active" href="/admin"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
                        </li>
                        <% if can? :manage, Course %>
                        <li>
                            <a href="#"><i class="fa fa-calendar fa-fw"></i> Courses<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <%= link_to "Courses", courses_path %> 
                                </li>
                                <li>
                                    <%= link_to "New Course", new_course_path %>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <% end %>

                        <% if can? :manage, ResourcePerson %>
                        <li>
                            <a href="#"><i class="fa fa-user fa-fw"></i> Resource Person<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <%= link_to "Resource People", resource_people_path %> 
                                </li>
                                <li>
                                    <%= link_to "Add Resource Person", new_resource_person_path %>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                        <% end %> 
                       
                        <% if can? :record, ShorttermCourse %>
                        <li>
                            <a href="#"><i class="fa fa-edit fa-fw"></i>Application Forms<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">        
                                <li>
                                    <%= link_to "Short-term Course", shortterm_record_path %> 
                                </li>
                                <li>
                                    <%= link_to "Refresher Course", refresher_record_path %>
                                </li>
                                <li>
                                    <%= link_to "Orientation Course", orientation_record_path %>
                                </li>
                                <li>
                                    <%= link_to "Interaction Program", interaction_record_path %>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>    
                        <% end %>

                        <li>
                            <a href="#"><i class="fa fa-folder fa-fw"></i> Feedback<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">        
                                <li>
                                    <%= link_to "New Feedback", new_feedback_path %> 
                                </li>
                                <% if can? :read, Feedback %>
                                <li>
                                    <%= link_to "Feedback Data", feedbacks_path %> 
                                </li>
                                <% end %>
                                <li>
                                    <%= link_to "Feedback Report", report_path %> 
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>

                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper">
            <%= yield %>    
                <!-- Devise error message -->
                <%- flash.each do |name, msg| -%>
                  <div class="alert alert-info col-md-3" role="alert">
                    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
                  </div>
                <%- end -%>
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
      
</body>
</html>