<div class="col-lg-12" id="filterrific_results">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>          
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>University</th>
                                <th>Date of birth</th>
                                <th>Mobile</th>
                                <th>Residential address</th>
                                <th>Course</th>
                            </tr>
                        </thead>    
                        <% @orientation_courses.each do |orientation_course| %>
                          <tbody>
                              <tr>
                                <td><%= link_to orientation_course.id, orientation_course %></td>
                                <td><%= orientation_course.name %></td>
                                <td><%= orientation_course.email %></td>
                                <td><%= orientation_course.university %></td>
                                <td><%= orientation_course.dob.strftime('%d-%b-%Y') %></td>
                                <td><%= orientation_course.mobile %></td>
                                <td><%= orientation_course.res_address %></td>
                                <td><%= orientation_course.course.course_name %></td>    
                              </tr>
                          </tbody>    
                        <% end %>
                    </table>
                    <%= paginate @orientation_courses %>    
                </div>
                <!-- /.table-responsive -->    
    </div>
    <!-- /.col-lg-12 -->