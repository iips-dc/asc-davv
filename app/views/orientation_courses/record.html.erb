<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Orientation Course Table Records</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->


<!-- row -->
<div class="row">
    <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>          
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>University</th>
                                <th>Date of birth</th>
                                <th>Mobile</th>
                                <th>Residential address</th>
                                <th>City</th>
                            </tr>
                        </thead>    
                        <% @orientation_courses.each do |orientation_course| %>
                          <tbody>
                              <tr>
                                <td><%= link_to orientation_course.id, orientation_course %></td>
                                <td><%= orientation_course.name %></td>
                                <td><%= orientation_course.email %></td>
                                <td><%= orientation_course.university %></td>
                                <td><%= orientation_course.dob %></td>
                                <td><%= orientation_course.mobile %></td>
                                <td><%= orientation_course.res_address %></td>
                                <td><%= orientation_course.city %></td>    
                              </tr>
                          </tbody>    
                        <% end %>
                        <%= paginate @orientation_courses %>    
                    </table>
                </div>
                <!-- /.table-responsive -->    
    </div>
    <!-- /.col-lg-12 -->    
</div>
<!-- /. row -->