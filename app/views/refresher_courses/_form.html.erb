<%= form_for(@refresher_course, :html => { :class => 'form-horizontal'}) do |f| %>
    <% if @refresher_course.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@refresher_course.errors.count, "error") %> prohibited this refresher_course from being saved:</h2>

          <ul>
          <% @refresher_course.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
    <% end %>

<div role="tabpanel">
  <!-- Nav tabs -->
  <ul id="tabs" class="nav nav-pills custom" role="tablist">
    <li role="presentation" class="active"><a href="#detail1"  aria-controls="detail1" role="tab" data-toggle="tab">Personal Details</a></li>
    <li role="presentation"><a href="#detail2" aria-controls="detail2" role="tab" data-toggle="tab">University Details</a></li>
    <li role="presentation"><a href="#detail3" aria-controls="detail3" role="tab" data-toggle="tab">Preferred Dates</a></li>
    <li role="presentation"><a href="#detail4" aria-controls="detail4" role="tab" data-toggle="tab">Contact Details</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">  
    <div role="tabpanel" class="panel panel-primary tab-pane active" style="margin-top:10px" id="detail1">
        <div class="panel-heading input-lg">
            <h4> Personal Details </h4>
        </div>  
        <!-- Panel-head -->
        
        <div class="panel-body">
            <div class="form-group">
                <div class="col-sm-2 label-control">
                  <%= f.label :Name %>
                </div>
                <div class="col-sm-10">
                  <%= f.text_field :name, :placeholder => "Enter Full Name", :class => 'form-control' %>
                </div>
            </div>
            <!-- Name Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">          
                <%= f.label :Gender %>
              </div>           
              <div class="col-sm-10">   
                <%= f.radio_button :gender, 'male' %>        
                <%= label :Gender, 'Male' %>
                <%= f.radio_button :gender, 'female' %>
                <%= label :Gender, 'Female' %>
                <%= f.radio_button :gender, 'other' %>
                <%= label :Gender, 'Other' %>
                <p class="help-block"> Select Your Gender </p>
              </div>
            </div>
            <!-- Gender Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :Dob %>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :dob, :placeholder => "Select Your Date Of Birth", :class => 'datepicker' %>
                <i class="fa fa-calendar"></i>
                <p class="help-block"> Date Format: YYYY/MM/DD </p>
              </div>
            </div>
            <!-- Date Of Birth -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :Religion %>
              </div>
              <div class="col-sm-10">
                <%= f.select :religion, options_for_select([ "Hinduism", "Sikhism", "Buddhism", "Jainism", "Islam", "Christanity" ]) %>
                <p class="help-block"> Select Your Religion </p>
              </div>
            </div>
            <!-- Religion Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :Category %>
              </div>
              <div class="col-sm-10">
                <%= f.select(:category,[['General', 'general'], ['OBC', 'obc'], ['SC', 'sc'], ['ST', 'st'] ]) %>
              </div>
              <span class="col-sm-offset-2 col-sm-10">        
              <p class="help-block"> Select Your Category </p>
              </span>
            </div>
            <!-- Category Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :Marital_status %>
              </div>
              <div class="col-sm-10">
                <%= f.radio_button :marital_status, 'married' %>        
                <%= label :Marital_status, 'Married' %>
                <%= f.radio_button :marital_status, 'unmarried' %>
                <%= label :Marital_status, 'Unmarried' %>
                <%= f.radio_button :marital_status, 'divorced' %>
                <%= label :Marital_status, 'Divorced' %>
                <%= f.radio_button :marital_status, 'widow' %>
                <%= label :Marital_status, 'Widow' %>
              </div>   
            </div>
            <!-- Marital Status Field -->
        </div>
        <!-- Panel-body -->
   
        <div class="actions col-sm-offset-3 col-sm-9" style="margin-top:10px" >
          <span class="btn btn-success" id="toggle1">Previous</span>
          <span class="btn btn-success" id="toggle2">Next</span>
        </div>
        <!-- Prev-Next Button -->
    </div>
    <!-- Panel -->
        
    <div role="tabpanel" class="panel panel-primary tab-pane" style="margin-top:10px" id="detail2">
        <div class="panel-heading input-lg">
            <h4> University Details </h4>
        </div>
        <!-- Panel-head -->
        
        <div class="panel-body">
            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :Stream %>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :stream, :placeholder => "Enter Stream", :class => 'form-control', :validate => true %>
              </div>
            </div>
            <!-- Stream Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :Course %>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :course, :placeholder => "Enter Course", :class => 'form-control' %>
              </div>
            </div>
            <!-- Course Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :Position %>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :position, :placeholder => "Enter Position", :class => 'form-control' %>
              </div>
            </div>
            <!-- Position Field -->            

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :Payscale %>
              </div>
              <div class="col-sm-10">
                <%= f.select :payscale, options_for_select([ "Under 10000", "10000-20000", "20000-30000", "30000-50000", "50000-80000", "80000-100000", "100000 and above" ]) %>
                <p class="help-block"> Select Your Payscale </p>
              </div>
            </div>
            <!-- Payscale Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control"><%= f.label :Date_Of_Joining %>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :date_of_joining, :placeholder => "Select Your Date Of Joining", :class => 'datepicker' %>
                <i class="fa fa-calendar"></i>
                <p class="help-block"> Date Format: YYYY/MM/DD </p>
              </div>  
            </div>
            <!-- Date Of Joining Field -->

            <div class="form-group form-inline">
              <div class="col-sm-2 label-control">
                <%= f.label :phd ,"Are you a phd holder ?" %>
              </div>
              <div class="col-sm-10">
                <%= f.radio_button :phd, true %> 
                <%= label :phd, 'Yes' %>
                <%= f.radio_button :phd, false %>
                <%= label :phd, 'No' %>
                <p class="help-block"> Select Yes if you are a phd holder, otherwise No</p>
              </div>
            </div>
            <!-- phd Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :College %>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :college, :placeholder => "Enter College/UTD", :class => 'form-control' %>
              </div>
            </div>
            <!-- College Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :University %>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :university, :placeholder => "Enter University", :class => 'form-control' %>
              </div>
            </div>
            <!-- University Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :City %>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :city, :placeholder => "Enter City", :class => 'form-control' %>
              </div>
            </div>
            <!-- City Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :District %>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :district, :placeholder => "Enter District", :class => 'form-control' %>
              </div>
            </div>
            <!-- District Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :State %>
              </div>
              <div class="col-sm-10">
                <%= f.select :state, options_for_select([ "Andhra Pradesh", "Arunachal Pradesh", "Assam", "Bihar", "Chhattisgarh", "Goa", "Gujarat", "Haryana", "Himachal Pradesh", "Jammu and Kashmir", "Jharkhand", "Karnataka", "Kerala", "Madhya Pradesh", "Maharashtra", "Manipur", "Meghalaya", "Mizoram", "Nagaland", "Odisha" , "Punjab", "Rajasthan", "Sikkim", "Tamil Nadu", "Tripura", "Uttar Pradesh", "Uttarakhand", "West Bengal"]) %>
                <p class="help-block"> Select State </p>
              </div>
            </div>
            <!-- State Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :University_pin %>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :university_pin, :placeholder => "Enter Pin", :class => 'form-control' %>
              </div>
            </div>
            <!-- University Pin Field -->
        </div>
        <!-- Panel-body -->
        
        <div class="actions col-sm-offset-3 col-sm-9" style="margin-top:10px" >
          <span class="btn btn-success" id="toggle3">Previous</span>
          <span class="btn btn-success" id="toggle4">Next</span>
        </div>
        <!-- Prev-Next Button -->

    </div>
    <!-- Panel -->
      
    <div role="tabpanel" class="panel panel-primary tab-pane" style="margin-top:10px" id="detail3">
          <div class="panel-heading input-lg">
              <h4> Preferred Dates </h4>
          </div>
          <!-- Panel-head -->

          <div class="panel-body">
              <div class="form-group">
                <div class="col-sm-2 label-control">
                  <%= f.label :pref_date1 %>
                </div>
                <div class="col-sm-10">
                  <%= f.text_field :pref_date1, :placeholder => "Select Your First Date Preference", :class => 'prefdatepicker' %>
                  <i class="fa fa-calendar"></i>
                  <p class="help-block"> Date Format: YYYY/MM/DD </p>
                </div>
              </div>
              <!-- Preferred Date1 Field -->

              <div class="form-group">
                <div class="col-sm-2 label-control">
                  <%= f.label :pref_date2 %>
                </div>
                <div class="col-sm-10">
                  <%= f.text_field :pref_date2, :placeholder => "Select Your Second Date Preference", :class => 'prefdatepicker' %>
                  <i class="fa fa-calendar"></i>
                  <p class="help-block"> Date Format: YYYY/MM/DD </p>
                </div> 
              </div>
              <!-- Preferred Date2 Field -->
          </div>
          <!-- Panel-body -->

          <div class="actions col-sm-offset-3 col-sm-9" style="margin-top:10px" >
            <span class="btn btn-success" id="toggle5">Previous</span>
            <span class="btn btn-success" id="toggle6">Next</span>
          </div>
          <!-- Prev-Next Button -->

      </div>    
      <!-- Panel -->

      <div role="tabpanel" class="panel panel-primary tab-pane" style="margin-top:10px" id="detail4">
            <div class="panel-heading input-lg">
                <h4> Contact Details </h4>
            </div>
            <!-- Panel head -->

            <div class="panel-body">
                <div class="form-group">
                  <div class="col-sm-2 label-control">
                    <%= f.label :Email %>
                  </div>
                  <div class="col-sm-10">
                    <%= f.text_field :email, :placeholder => "Enter E-mail Address", :class => 'form-control' %>
                  </div>
                </div>
                <!-- Email Field -->

                <div class="form-group">
                  <div class="col-sm-2 label-control">
                    <%= f.label :Alternate_Email %>
                  </div>
                  <div class="col-sm-10">
                    <%= f.text_field :email, :placeholder => "Enter Alternate E-mail Address", :class => 'form-control' %><!-- Alternate E-mail field not added in table -->
                  </div>
                </div>
                <!-- Email Field -->

                <div class="form-group">
                  <div class="col-sm-2 label-control">
                    <%= f.label :Landline %>
                  </div>
                  <div class="col-sm-3">
                    <%= f.text_field :std_code, :placeholder => "STD Code", :class => 'form-control' %> <!-- STD Code Field not added in table -->
                  </div>
                  <div class="col-sm-7">
                    <%= f.text_field :landline, :placeholder => "Enter Landline Number", :class => 'form-control' %>
                  </div>
                </div>
                <!-- Landline Field -->

                <div class="form-group">
                  <div class="col-sm-2 label-control">
                    <%= f.label :Mobile %>
                  </div>
                  <div class="col-sm-2 label-control">
                    <%= text_field_tag(:mobile, "+91", :class => 'form-control', :disabled => true) %> 
                  </div>
                  <div class="col-sm-8">
                    <%= f.text_field :mobile, :placeholder => "Enter Mobile Number", :class => 'form-control' %>
                  </div>
                </div>
                <!-- Mobile Field -->

                <div class="form-group">
                  <div class="col-sm-2 label-control">
                    <%= f.label :residential_Address %>
                  </div>
                  <div class="col-sm-10">
                    <%= f.text_area :res_address, :class => 'form-control', :placeholder => "Enter Full Residential Address", :style => "height:100px" %>
                  </div>
                </div>
                <!-- Residential Address Field -->

                <div class="form-group">
                  <div class="col-sm-2 label-control">
                    <%= f.label :Pin %>
                  </div>
                  <div class="col-sm-10">
                    <%= f.text_field :pin, :placeholder => "Enter pin", :class => 'form-control' %>
                  </div>
                </div>
                <!-- Pin Field -->
            </div>
            <!-- Panel-body -->

            <div class="actions col-sm-offset-3 col-sm-9" style="margin-top:10px" >
              <span class="btn btn-success" id="toggle7">Previous</span>
              <span class="btn btn-success" id="toggle8">Next</span>
            </div>
            <!-- Prev-Next Button -->

            <div class="actions col-sm-offset-3 col-sm-9" style="margin-top:10px" >
              <%= link_to 'Back', shortterm_courses_path, :class => "btn btn-default" %>
              <%= f.submit "Submit", :class => "btn btn-primary"%>        
            </div>
            <!-- Submit Button-->  
    </div>    
    <!-- Panel -->
      
  </div>
  <!-- Tab Content-->

</div>
<!-- Tab Panel -->      
<% end %>

