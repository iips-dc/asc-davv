<%= form_for(@refresher_course, :html => { :class => 'form-horizontal'}) do |f| %>
    <% if @refresher_course.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@refresher_course.errors.count, "error") %> prohibited this refresher_course from being saved:</h2>

          <ul>
          <% @refresher_course.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
    <% end %>

    <div class="panel panel-primary" style="margin-top:10px">
        <div class="panel-heading input-lg">
            <h4> Personal Details </h4>
        </div>  
        <!-- Panel-head -->
        
        <div class="panel-body">
            <div class="form-group">
                <div class="col-sm-2 label-control">
                  <%= f.label :Name %>
                </div>
                <div class="col-sm-10">
                  <%= f.text_field :name, :placeholder => "Enter Full Name", :class => 'form-control' %>
                </div>
            </div>
            <!-- Name Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">          
                <%= f.label :Gender %>
              </div>           
              <div class="col-sm-10">   
                <%= f.radio_button :gender, 'male' %>        
                <%= label :Gender, 'Male' %>
                <%= f.radio_button :gender, 'female' %>
                <%= label :Gender, 'Female' %>
                <%= f.radio_button :gender, 'other' %>
                <%= label :Gender, 'Other' %>
                <p class="help-block"> Select Your Gender </p>
              </div>
              <span class="col-sm-offset-2 col-sm-10">        
              
              </span>
            </div>
            <!-- Gender Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :Dob %>
              </div>
              <div class="col-sm-10">
                <%= f.date_select :dob, :placeholder => "Enter Date Of Birth", :class => 'form-control' %>
                <p class="help-block"> Select Your Date Of Birth </p>
              </div>
            </div>
            <!-- Date Of Birth -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :Religion %>
              </div>
              <div class="col-sm-10">
                <%= f.select :religion, options_for_select([ "Hinduism", "Sikhism", "Buddhism", "Jainism", "Islam", "Christanity" ]) %>
                <p class="help-block"> Select Your Religion </p>
              </div>
            </div>
            <!-- Religion Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :Category %>
              </div>
              <div class="col-sm-10">
                <%= select_tag :category, options_for_select([ "General", "OBC", "SC", "ST" ]) %>
              </div>
              <span class="col-sm-offset-2 col-sm-10">        
              <p class="help-block"> Select Your Category </p>
              </span>
            </div>
            <!-- Category Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :Marital_status %>
              </div>
              <div class="col-sm-10">
                <%= f.radio_button :marital_status, 'married' %>        
                <%= label :Marital_status, 'Married' %>
                <%= f.radio_button :marital_status, 'unmarried' %>
                <%= label :Marital_status, 'Unmarried' %>
                <%= f.radio_button :marital_status, 'divorced' %>
                <%= label :Marital_status, 'Divorced' %>
                <%= f.radio_button :marital_status, 'widow' %>
                <%= label :Marital_status, 'Widow' %>
                <p class="help-block"> Select Your Marital Status </p>
              </div>   
            </div>
            <!-- Marital Status Field -->
        </div>
        <!-- Panel-body -->
    </div>
    <!-- Panel -->
      
    <div class="panel panel-primary" style="margin-top:10px">
        <div class="panel-heading input-lg">
            <h4> University Details </h4>
        </div>
        <!-- Panel-head -->
        
        <div class="panel-body">
            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :Stream %>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :stream, :placeholder => "Enter Stream", :class => 'form-control' %>
              </div>
            </div>
            <!-- Stream Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :Course %>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :course, :placeholder => "Enter Course", :class => 'form-control' %>
              </div>
            </div>
            <!-- Course Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :Position %>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :position, :placeholder => "Enter Position", :class => 'form-control' %>
              </div>
            </div>
            <!-- Position Field -->            

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :Payscale %>
              </div>
              <div class="col-sm-10">
                <%= select_tag :payscale, options_for_select([ "Under 10000", "10000-20000", "20000-30000", "30000-50000", "50000-80000", "80000-100000", "100000 and above" ]) %>
                <p class="help-block"> Select Your Payscale </p>
              </div>
            </div>
            <!-- Payscale Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control"><%= f.label :Date_Of_Joining %>
              </div>
              <div class="col-sm-10">
                <%= f.date_select :date_of_joining, :class => 'form-control' %>
                <p class="help-block"> Select Your Date Of Joining </p>
              </div>  
            </div>
            <!-- Date Of Joining Field -->

            <div class="form-group form-inline">
              <div class="col-sm-2 label-control">
                <%= f.label :phd ,"Are you a phd holder ?" %>
              </div>
              <div class="col-sm-10">
                <%= f.radio_button :phd, 'yes' %> 
                <%= label :phd, 'Yes' %>
                <%= f.radio_button :phd, 'no' %>
                <%= label :phd, 'No' %>
                <p class="help-block"> Select Yes if you are a phd holder, otherwise No</p>
              </div>
            </div>
            <!-- phd Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :College %>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :college, :placeholder => "Enter College/UTD", :class => 'form-control' %>
              </div>
            </div>
            <!-- College Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :University %>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :university, :placeholder => "Enter University", :class => 'form-control' %>
              </div>
            </div>
            <!-- University Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :City %>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :city, :placeholder => "Enter City", :class => 'form-control' %>
              </div>
            </div>
            <!-- City Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :District %>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :district, :placeholder => "Enter District", :class => 'form-control' %>
              </div>
            </div>
            <!-- District Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :State %>
              </div>
              <div class="col-sm-10">
                <%= select_tag :state, options_for_select(["Andhra Pradesh", "Arunachal Pradesh", "Assam", "Bihar", "Chhattisgarh", "Goa", "Gujarat", "Haryana", "Himachal Pradesh", "Jammu and Kashmir", "Jharkhand", "Karnataka", "Kerala", "Madhya Pradesh", "Maharashtra", "Manipur", "Meghalaya", "Mizoram", "Nagaland", "Odisha" , "Punjab", "Rajasthan", "Sikkim", "Tamil Nadu", "Tripura", "Uttar Pradesh", "Uttarakhand", "West Bengal"]) %>
                <p class="help-block"> Select State </p>
              </div>
            </div>
            <!-- State Field -->

            <div class="form-group">
              <div class="col-sm-2 label-control">
                <%= f.label :University_pin %>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :university_pin, :placeholder => "Enter Pin", :class => 'form-control' %>
              </div>
            </div>
            <!-- University Pin Field -->
        </div>
        <!-- Panel-body -->
    </div>
    <!-- Panel -->
      
    <div class="panel panel-primary" style="margin-top:10px">
          <div class="panel-heading input-lg">
              <h4> Preferred Dates </h4>
          </div>
          <!-- Panel-head -->

          <div class="panel-body">
              <div class="form-group">
                <div class="col-sm-2 label-control">
                  <%= f.label :pref_date1 %>
                </div>
                <div class="col-sm-10">
                  <%= f.date_select :pref_date1, :class => 'form-control' %>
                  <p class="help-block"> Select Your First Date Preference of Attending course </p>
                </div>
              </div>
              <!-- Preferred Date1 Field -->

              <div class="form-group">
                <div class="col-sm-2 label-control">
                  <%= f.label :pref_date2 %>
                </div>
                <div class="col-sm-10">
                  <%= f.date_select :pref_date2, :class => 'form-control' %>
                  <p class="help-block"> Select Your Second Date Preference of Attending course </p>
                </div> 
              </div>
              <!-- Preferred Date2 Field -->
          </div>
          <!-- Panel-body -->
      </div>    
      <!-- Panel -->
      
      <div class="panel panel-primary" style="margin-top:10px">
            <div class="panel-heading input-lg">
                <h4> Contact Details </h4>
            </div>
            <!-- Panel head -->

            <div class="panel-body">
                <div class="form-group">
                  <div class="col-sm-2 label-control">
                    <%= f.label :Email %>
                  </div>
                  <div class="col-sm-10">
                    <%= f.text_field :email, :placeholder => "Enter E-mail", :class => 'form-control' %>
                  </div>
                </div>
                <!-- Email Field -->

                <div class="form-group">
                  <div class="col-sm-2 label-control">
                    <%= f.label :Landline %>
                  </div>
                  <div class="col-sm-3">
                    <%= f.text_field :landline, :placeholder => "STD Code", :class => 'form-control' %> <!-- Field not added in table -->
                  </div>
                  <div class="col-sm-7">
                    <%= f.text_field :landline, :placeholder => "Enter Landline Number", :class => 'form-control' %>
                  </div>
                </div>
                <!-- Landline Field -->

                <div class="form-group">
                  <div class="col-sm-2 label-control">
                    <%= f.label :Mobile %>
                  </div>
                  <div class="col-sm-2 label-control">
                    <%= text_field_tag(:mobile, "+91", :class => 'form-control', :disabled => true) %> 
                  </div>
                  <div class="col-sm-8">
                    <%= f.text_field :mobile, :placeholder => "Enter Mobile Number", :class => 'form-control' %>
                  </div>
                </div>
                <!-- Mobile Field -->

                <div class="form-group">
                  <div class="col-sm-2 label-control">
                    <%= f.label :residential_Address %>
                  </div>
                  <div class="col-sm-10">
                    <%= f.text_area :res_address, :class => 'form-control', :placeholder => "Enter Full Residential Address", :style => "height:100px" %>
                  </div>
                </div>
                <!-- Residential Address Field -->

                <div class="form-group">
                  <div class="col-sm-2 label-control">
                    <%= f.label :Pin %>
                  </div>
                  <div class="col-sm-10">
                    <%= f.text_field :pin, :placeholder => "Enter pin", :class => 'form-control' %>
                  </div>
                </div>
                <!-- Pin Field -->
            </div>
            <!-- Panel-body -->
    </div>    
    <!-- Panel -->

      <div class="actions">
        <%= f.submit "Submit", :class => "btn btn-primary"%>
      </div>
<% end %>

