<!-- Page Content -->
<div class="container">
    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Programs
                <small>Refresher Course</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="index.html">Home</a>
                </li>
                <li class="active">Refresher Courses</li>
            </ol>
        </div>
    </div>
    <!-- /.row -->
    <hr>

    <h3>Select a Course</h3>

    <select autofocus required>
    <% @courses.each do |course| %>
        <% if course.type == 'Refresher Course' %>
            <option><%= course.name %></option>
        <% end %>
    <% end %>
    </select>
    <br />
    <br />

    <%= link_to 'Register Here', new_refresher_course_path, class:"btn btn-primary", :style => "color:white" %>
    <hr>
    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; Your Website 2014</p>
           </div>
        </div>
    </footer>
</div>
