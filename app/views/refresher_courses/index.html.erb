<!-- Page Content -->
    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Programs
                <small>Refresher Course</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <%= link_to 'Home', index_path %>
                </li>
                <li class="active">Refresher Courses</li>
            </ol>
        </div>
    </div>
    <!-- /.row -->
    <hr>

    <h3>Select a Course</h3>

    <select autofocus required>
    <% @courses.each do |course| %>
        <% if course.course_type.downcase == 'refresher course' %>
                <option selected disabled value="">Select a Course</option>
                <option><%= course.course_name %></option>
        <% end %>
    <% end %>
    </select>
    <br />
    <br />

    <%= link_to 'Register Here', new_refresher_course_path, class:"btn btn-primary", :style => "color:white" %>
    <hr>




  






