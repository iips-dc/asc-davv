wb = xlsx_package.workbook
wb.add_worksheet(name: "List") do |sheet|
  
  sheet.add_row ["ID", "Name", "Email", "University", "Date Of Birth", "Mobile", "Residential Address", "Course"]
  @refresher_courses.each do |refresher_course|
  	sheet.add_row [refresher_course.id, refresher_course.name, refresher_course.email, refresher_course.university, refresher_course.dob, refresher_course.mobile, refresher_course.res_address, refresher_course.course.course_name]
  end
  
end