<!-- row -->
<div class="row">
    <br><br><br><br>
    <div class="col-md-4 col-md-offset-4 ">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Please Sign Up</h3>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
          <%= devise_error_messages! %>
          <fieldset>
            <div class="form-group">
              <%= f.label :username, :class => 'label-control' %><br />
              <%= f.text_field :username, :placeholder => "Username", :class => 'form-control', autofocus: true %>
            </div>

            <div class="form-group">
              <%= f.label :email, :class => 'label-control' %><br />
              <%= f.email_field :email, :placeholder => "E-mail", :class => 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :password, :class => 'label-control' %>
              <% if @validatable %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, :placeholder => "Password", :class => 'form-control', autocomplete: "off" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, :class => 'label-control' %><br />
              <%= f.password_field :password_confirmation, :placeholder => "Re-enter Password", :class => 'form-control', autocomplete: "off" %>
            </div>

            <div class="actions">
              <%= f.submit "Sign up", :class =>"btn btn-lg btn-primary btn-block" %>
            </div>
          </fieldset>  
          <% end %>
        </div>
        <div class="col-sm-10 btn-md">
          <label>Already Signed Up?<%= render "devise/shared/links" %></label>
        </div>
      </div>  
      <!-- login panel -->
    </div>
</div>
<!-- /.row -->
  