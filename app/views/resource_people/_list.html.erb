<div class="col-lg-12" id="filterrific_results">
        <div class="panel panel-default">
            <div class="panel-heading">
              <b>List Of Resource Persons</b>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                      <thead>
                        <tr>
                          <th>S.no</th>
                          <th>Person name</th>
                          <th>Mobile</th>
                          <th>Person email</th>
                        </tr>
                      </thead>  
                      <tbody>
                      <% i=0 %>  
                        <% @resource_people.each do |resource_person| %>
                          <tr>
                            <td><%= link_to i=i+1, resource_person %></td>
                            <td><%= resource_person.person_name %></td>
                            <td><%= resource_person.mobile %></td>
                            <td><%= resource_person.person_email %></td>
                          </tr>
                        <% end %>
                      </tbody>  
                    </table>
                    <%= paginate @resource_people %>
                </div>
                <!-- /.table-responsive -->       
              </div>
              <!-- /.panel-body -->
            </div>
            <!-- /. panel -->    
</div>
<!-- /.col-lg-12 -->