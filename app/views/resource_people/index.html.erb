<!-- row -->            
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Resource Persons Record</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<!-- row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
              <b>List Of Resource Persons</b>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                      <thead>
                        <tr>
                          <th>ResourcePerson ID</th>
                          <th>Person name</th>
                          <th>Mobile</th>
                          <th>Person email</th>
                        </tr>
                      </thead>  
                      <tbody>  
                        <% @resource_people.each do |resource_person| %>
                          <tr>
                            <td><%= link_to resource_person.id, resource_person %></td>
                            <td><%= resource_person.person_name %></td>
                            <td><%= resource_person.mobile %></td>
                            <td><%= resource_person.person_email %></td>
                          </tr>
                        <% end %>
                      </tbody>  
                    </table>
                    <%= paginate @resource_people %>
                </div>
                <!-- /.table-responsive -->       
              </div>
              <!-- /.panel-body -->
            </div>
            <!-- /. panel -->    
        </div>
        <!-- /.col-lg-12 -->    
</div>
<!-- /. row -->    
    