<!-- row -->            
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Individual Record</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<!-- row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <b>Record</b>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Person Name</th>
                          <th>Email</th>
                          <th>Mobile</th>
                        </tr>
                      </thead>  
                      <tbody>
                        <tr class="info">
                          <td><%= @resource_person.person_name %></td>
                          <td><%= @resource_person.person_email %></td>
                          <td><%= @resource_person.mobile %></td>
                        </tr>
                      </tbody> 
                  </table>
                </div>
                <!-- /.table-responsive -->       
              </div>
              <!-- /.panel-body -->
            </div>
            <!-- /. panel -->    
          <%= link_to 'Edit', edit_resource_person_path(@resource_person), :class => 'btn btn-default' %>
          <%= link_to 'Delete', resource_person_path, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default' %> 
          <%= link_to 'Back', resource_people_path, :class => 'btn btn-default' %>
        </div>
        <!-- /.col-lg-12 -->    
</div>
<!-- /. row -->
