<div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">#<%= @shortterm_course.id %> <%= @shortterm_course.name %></h3>
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-md-3 col-lg-3 " align="center"> <%= image_tag(@shortterm_course.image_url(:thumb).to_s, :class => @shortterm_course.image? ? "img-responsive img-thumbnail" : nil) %> </div>
                
                <div class=" col-md-9 col-lg-9 "> 
                  <table class="table table-user-information">
                    <tbody>
                      <tr>
                        <td>Date Of Birth</td>
                        <td><%= @shortterm_course.dob.strftime('%d-%b-%Y') %></td>
                      </tr>  
                      <tr>
                        <td>Gender</td>
                        <td><%= @shortterm_course.gender %></td>
                      </tr>
                      <tr>
                        <td>Religion</td>
                        <td><%=@shortterm_course.religion %></td>
                      </tr>
                      <tr>
                        <td>Category</td>
                        <td><%=@shortterm_course.category %></td>
                      </tr>
                      <tr>
                        <td>Marital Status</td>
                        <td><%= @shortterm_course.marital_status %></td>
                      </tr>
                      <tr>
                        <td>Email</td>
                        <td><%= @shortterm_course.email %></td>
                      </tr>
                      <tr>
                        <td>Stream</td>
                        <td><%= @shortterm_course.stream %></td>
                      </tr>
                      <tr>
                        <td>College</td>
                        <td><%= @shortterm_course.college %></td>
                      </tr>
                      <tr>
                        <td>University</td>
                        <td><%= @shortterm_course.university %></td>
                      </tr>
                      <tr>
                        <td>University Pin</td>
                        <td><%= @shortterm_course.university_pin %></td>
                      </tr>
                      <tr>
                        <td>City</td>
                        <td><%= @shortterm_course.city %></td>
                      </tr>
                      <tr>
                        <td>District</td>
                        <td><%= @shortterm_course.district %></td>
                      </tr>
                      <tr>
                        <td>State</td>
                        <td><%= @shortterm_course.state %></td>
                      </tr>
                      <tr>
                        <td>Position</td>
                        <td><%= @shortterm_course.position %></td>
                      </tr>
                      <tr>
                        <td>Phd</td>
                        <td><%= yesno(@shortterm_course.phd) %></td>
                      </tr>
                      <tr>
                        <td>Payscale</td>
                        <td><%= @shortterm_course.payscale %></td>
                      </tr> 
                      <tr>
                        <td>Subject</td>
                        <td><%= @shortterm_course.subject %></td>
                      </tr>
                      <tr>
                        <td>Date Of Joining</td>
                        <td><%= @shortterm_course.date_of_joining.strftime('%d-%b-%Y') %></td>
                      </tr>
                      <tr>
                        <td>Landline</td>
                        <td><%= @shortterm_course.std_code %>-<%= @shortterm_course.landline %></td>
                      </tr>
                      <tr>
                        <td>Mobile</td>
                        <td><%= @shortterm_course.mobile %></td>
                      </tr>
                      <tr>
                        <td>Preferred Date 1</td>
                        <td><%= @shortterm_course.pref_date1.strftime('%d-%b-%Y') %></td>
                      </tr>
                      <tr>
                        <td>Preferred Date 2</td>
                        <td><%= @shortterm_course.pref_date2.strftime('%d-%b-%Y') %></td>
                      </tr>
                      <tr>
                        <td>Residential Address</td>
                        <td><%= @shortterm_course.res_address %></td>
                      </tr>
                      <tr>
                        <td>Pin</td>
                        <td><%= @shortterm_course.pin %></td>
                      </tr>
                      <tr>
                        <td>DD Number</td>
                        <td><%= @shortterm_course.dd_number %></td>
                      </tr>
                      <tr>
                        <td>DD Date</td>
                        <% if @shortterm_course.dd_date=''%>
                          <td><%= @shortterm_course.dd_date %></td>
                        <% else %>    
                          <td><%= @shortterm_course.dd_date.strftime('%d-%b-%Y') %></td>
                        <% end %>
                      </tr>
                      <tr>
                        <td>Bank Name</td>
                        <td><%= @shortterm_course.bank_name %></td>
                      </tr>
                      <tr>
                        <td>Amount</td>
                        <td><%= @shortterm_course.amount %></td>
                      </tr>
                    </tbody>
                  </table>   
                </div>
                <!-- /. col-md-9 -->
              </div>
              <!-- /. row -->
        </div>
        <!-- /. panel body -->

    </div>
    <!-- /. panel -->