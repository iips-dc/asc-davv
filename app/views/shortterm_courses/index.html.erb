<!-- Page Content -->
    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Programs
                <small>Short-Term Course</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <%= link_to 'Home', index_path %>
                </li>
                <li class="active">Short-Term Courses</li>
            </ol>
        </div>
    </div>
    <!-- /.row -->
    <hr>

    <h3>Select a Course</h3>
        <% @courses.each do |course| %>
            <% if course.course_type == 'shortterm course' %>
                <%= collection_select(:shortterm_course, :course_id, Course.find(:all), :id, :course_name, {:prompt => true}, {:required => true, :autofocus => true}) %>
            <% end %>
        <% end %>
    <br />
    <br />  
        <%= link_to 'Register Here', new_shortterm_course_path, class:"btn btn-primary", :style => "color:white" %>
    <hr>

