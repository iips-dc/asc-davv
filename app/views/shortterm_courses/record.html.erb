<!-- row -->            
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Short-Term Course Table Records</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<!-- row -->
<div class="row">
    <div class="col-lg-12">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>          
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>University</th>
                                <th>Date of birth</th>
                                <th>Mobile</th>
                                <th>Residential address</th>
                                <th>City</th>
                            </tr>
                        </thead>    

                    <% @shortterm_courses.each do |shortterm_course| %>
                        <tbody>
                            <tr>
                                <td><%= link_to shortterm_course.id, shortterm_course %></td>
                                <td><%= shortterm_course.name %></td>
                                <td><%= shortterm_course.email %></td>
                                <td><%= shortterm_course.university %></td>
                                <td><%= shortterm_course.dob %></td>
                                <td><%= shortterm_course.mobile %></td>
                                <td><%= shortterm_course.res_address %></td>
                                <td><%= shortterm_course.city %></td>
                          </tr>
                        </tbody>  
                    <% end %>
                    <%= paginate @shortterm_courses %>    
                    </table>
                </div>
                <!-- /.table-responsive -->    
        </div>
        <!-- /.col-lg-12 -->    
</div>
<!-- /. row -->