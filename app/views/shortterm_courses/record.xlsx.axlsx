wb = xlsx_package.workbook
wb.add_worksheet(name: "List") do |sheet|
  i=0
  sheet.add_row ["S.no", "Name", "Email", "University", "Date Of Birth", "Mobile", "Residential Address", "Course"]
  @shortterm_courses.each do |shortterm_course|
  	sheet.add_row [i+=1, shortterm_course.name, shortterm_course.email, shortterm_course.university, shortterm_course.dob.strftime('%d-%b-%Y'), shortterm_course.mobile, shortterm_course.res_address, shortterm_course.course.course_name]
  end
  
end